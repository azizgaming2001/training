@model DEMO1.Models.LoginModel
@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "my-3 border p-2" }))
{
    @if (ViewData["MessageLogin"] != null)
    {
        <p class ="text-danger text-center"> @ViewData["MessageLogin"]</p>
    }
    <div class="mb-3">
        <label for="username" class="form-label">Email address</label>
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @id = "username" })
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}